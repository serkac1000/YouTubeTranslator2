modules = ["java"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Android App Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "android_build_workflow"

[[workflows.workflow]]
name = "Android App Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew assembleDebug && echo \"App built successfully! APK can be found at app/build/outputs/apk/debug/app-debug.apk\""

[[workflows.workflow]]
name = "android_build_workflow"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/work && ./gradlew assembleDebug && cd ~ && $ANDROID_HOME/emulator/emulator -avd test -no-audio -no-boot-anim -no-window -gpu swiftshader_indirect -no-snapshot -noaudio -no-boot-anim & EMULATOR_PID=$! && sleep 40 && adb install -r /home/runner/work/app/build/outputs/apk/debug/app-debug.apk && sleep 5 && adb shell am start -n com.example.youtubetranslator/.MainActivity"

[deployment]
run = ["sh", "-c", "./gradlew assembleDebug && echo \"App built successfully! APK can be found at app/build/outputs/apk/debug/app-debug.apk\""]
